.tag-content
  ul
    margin-left 0
  li
    border-top 1px #ccc dashed
    clearfix
  .person
    margin-top 0.5rem
    min-height 70px
    img
      float left
      margin-right 1rem
    .name
      font-weight normal
      font-size 1rem

